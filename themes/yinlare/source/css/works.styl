.article-container
	display: flex
	max-width: 1000px
	.bold-title
		display none
	.article-preview
		a
			text-decoration none
			&:visited
				color #333
		flex 1
		// display inline-block
		.article-cover
			display block
			width 309px
			height 172px
			overflow hidden
			background url(/img/mov_shadow.png) no-repeat
			padding-top 7px
			padding-left 7px
			img
				width 100%
				height 100%
				max-width 295px
				max-height 166px
				margin 0 auto
		.article-title
			font-size 13px
			padding-left 4px
			max-width 300px
			word-wrap break-word
			word-break normal